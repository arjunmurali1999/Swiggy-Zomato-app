section.container-fluid.h-75#section-1
  .mask.mask-custom.container-fluid.padding
    .d-flex.justify-content-end.p-4
      .px-3
        a.btn.btn-outline-light.text-white(href='#') Login
      div
        a.btn.btn-outline-light.text-white(href='#') Create an account
    .d-flex.justify-content-center.align-items-center
      h1#logo.text-danger.display-5.bg-light.rounded-circle.text-center.h-50.p-4(style='font-weight: 600;') e!
    div#dropdown
      h2.display-5.text-center.pt-4.pb-3.text-white(style='font-weight:500') Find the best restaurants cafes and bars
      .d-flex.justify-content-center.row.w-100#dropdown
        .col-xs-12.col-sm-6.col-md-4.col-lg-6.input-group-lg.m-3.container#dropdownbutton(style='width:300px;')
          // <input type="text" class="form-control form-group input-group " placeholder="Search for  restaurants"/>
          .dropdown
            button#dropdownMenuButton1.btn.btn-secondary.dropdown-toggle.bg-light.text-secondary.btn-lg.w-100(type='button', data-bs-toggle='dropdown', aria-expanded='false')
              | Select your location
            ul.dropdown-menu.w-100(aria-labelledby='dropdownMenuButton1', style='overflow:scroll;overflow-x:hidden;max-height: 200px;')
              each restaurant in restaurants
                li
                  a.dropdown-item(href=`/location/${restaurant.city_name}`) #{restaurant.locality}
        .col-xs-12.col-sm-6.col-md-4.col-lg-6.input-group-lg.m-3.container#dropdownbutton(style='width:300px;')
          // <input type="text" class="form-control form-group input-group " placeholder="Search for  restaurants"/>
          .dropdown
            button#dropdownMenuButton1.btn.btn-secondary.dropdown-toggle.bg-light.text-secondary.btn-lg.w-100(type='button', data-bs-toggle='dropdown', aria-expanded='false')
              | Restaurants
            ul.dropdown-menu.col-xs-12.w-100(aria-labelledby='dropdownMenuButton1', style='overflow:scroll;overflow-x:hidden;max-height: 200px;')
              each restaurant in restaurants
                li 
                  .d-inline.d-flex
                    img.m-2.rounded-circle.float-left(src=`${restaurant.thumb}` style='height:50px;width:50px;')
                    div.pl-2
                      span 
                        a.dropdown-item(href=`/restaurant/${restaurant.slug}`).font-weight-bold.text-info #{restaurant.name}
                        p.p-2.text-secondary #{restaurant.locality}
                      hr
section#section-2.p-4
  .container
    .row
      #heading.col-12
        h1.display-6.pb-3(style='font-weight: 600; color: #192f60')
          | Quick Searches
      #heading.col-12
        h2.pb-5(style='font-weight: 500; font-size: 25px; color: #8c96ab')
          | Discover restaurants by type of meal
    .row
      each meal,i  in mealtype 
        .col-md-6.pb-4.col-sm-12.col-xs-12.col-lg-4.col-xlg-4
          .card
            .card-body.d-flex
              img.float-right(src=`/images/${meal.name.toLowerCase()}.png`, style='height: 160px; width: 160px')
              .col
                h4.card-title.px-4.pt-4 #{meal.name} 
                p.card-text.px-4
                  | #{meal.content}
